---
import type { JobOffer } from "../data/data.type";

interface Props {
  jobOffer: JobOffer;
}

const { jobOffer } = Astro.props;
---

<div
  class="rounded-md w-full bg-blue-100 dark:bg-blue-800 dark:bg-opacity-30 px-4 py-4 shadow-md transition transform duration-500"
>
  <div class="flex flex-col justify-between h-full">
    <div>
      <div
        class="text-lg font-semibold text-bookmark-blue flex space-x-1 items-center mb-2"
      >
        <span>{jobOffer.jobTitle}</span>
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-300 flex flex-col gap-2">
        {jobOffer.descriptionInParagrapgs.map((descPar) => <p>{descPar}</p>)}
      </div>
    </div>
    <div>
      <div class="mt-5">
        <a
          href={jobOffer.url}
          class="mr-2 my-1 uppercase tracking-wider px-2 text-blue-700 border-blue-700 hover:bg-blue-600 hover:text-blue-100 dark:text-white dark:border-white border dark:hover:bg-white dark:hover:text-blue-800 transition transform duration-500 text-sm font-semibold rounded py-1 cursor-pointer"
          >Apply</a
        >
      </div>
    </div>
  </div>
</div>
